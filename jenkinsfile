pipeline{
	agent any
	stages
	{
		stage('build')
		{
			steps{
			echo "build stage is working...."
			}
		}
		stage('test')
		{
			steps{
			echo "test stage is working"
			}
		}
		stage('deploy')
		{
			agent{
    				docker {
      					image 'Dockerfile'
					args '-v /home/sadmin/fibonacci/Dockerfile:/var/jenkins_home/workspace/jenkinsfile-demo@tmp/durable-c440c81f/'
				}
			}
			steps{
				sh 'echo "Hello"'
				sh 'sudo apt-get update'
			}
		}
	}
}
